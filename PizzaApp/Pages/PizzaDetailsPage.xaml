<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PizzaApp.ViewModels"
             x:Class="PizzaApp.Pages.PizzaDetailsPage"
             x:DataType="vm:PizzaDetailsViewModel"
             Title="Pizza Details">

    <VerticalStackLayout Padding="10">
        <Label Text="{Binding SelectedPizza.Name}" FontSize="30" />
        <Label Text="{Binding SelectedPizza.Description}" FontSize="18" />
        <Label Text="{Binding SelectedPizza.Price, StringFormat='Price: {0:C}'}" FontSize="18" />
    </VerticalStackLayout>
</ContentPage>
